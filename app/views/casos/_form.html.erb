<%= simple_form_for(@caso) do |f| %>
  <div id="errores">
    <%= f.error_notification %>
  </div>

  <%= f.input :id, as: :hidden%>
  <%= f.input :fecha %>
  <%= f.input :titulo%>

  <ul>
  <%= f.simple_fields_for :caso_presponsable do |caso_presponsable| %>
      <%= render 'caso_presponsable_fields', :f => caso_presponsable %>
  <% end %>
  </ul>
  <div class="links">
    <%= link_to_add_association 'AÃ±adir Presunto Responsable', f, 
      :caso_presponsable, {:class => 'btn-primary', "data-ajax" => "/casos/nuevopresponsable", "data-ajaxdata" => "caso_id", "count" => "2" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      casos_path, :class => 'btn' %>
  </div>
<% end %>
