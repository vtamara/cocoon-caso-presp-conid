<h1>Listando casos</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @casos.each do |caso| %>
      <tr>
        <td><%= caso.fecha %></td>
        <td><%= link_to 'Mostrar', caso %></td>
        <td><%= link_to 'Editar', edit_caso_path(caso) %></td>
        <td><%= link_to 'Eliminar', caso, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Caso', new_caso_path %>
