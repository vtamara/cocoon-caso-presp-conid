<h1>Listando presponsables</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @presponsables.each do |presponsable| %>
      <tr>
        <td><%= presponsable.nombre %></td>
        <td><%= link_to 'Mostrar', presponsable %></td>
        <td><%= link_to 'Editar', edit_presponsable_path(presponsable) %></td>
        <td><%= link_to 'Eliminar', presponsable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Presponsable', new_presponsable_path %>
